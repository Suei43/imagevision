{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",        // or your desired module system
    "outDir": "./dist",          // specify the output directory
    "rootDir": "./",          // specify the source directory
    "strict": true,              // enable strict type checking
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    // other options...
  },
  "include": ["src/**/*.ts"],   // specify the source files to include
  "exclude": ["node_modules",".vercel",]   // specify folders to exclude
}
